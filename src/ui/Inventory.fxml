<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.InventoryController">
   <children>
      <BorderPane>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <top>
            <HBox fx:id="topBar" alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: #2c3e50;" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="userInfoLabel" style="-fx-text-fill: white;" text="Manager: [Username]">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <Button fx:id="Logout" mnemonicParsing="false" onAction="#handleLogoutAction" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Logout" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
         </top>
         <bottom>
            <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="442.0" prefWidth="622.0" BorderPane.alignment="CENTER">
               <children>
                  <Label alignment="CENTER" layoutX="183.0" layoutY="14.0" prefHeight="32.0" prefWidth="256.0" text="INVENTORY">
                     <font>
                        <Font name="Adelle Sans Devanagari Bold" size="30.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER" layoutX="11.0" layoutY="44.0" prefHeight="229.0" prefWidth="600.0">
                     <children>
                        <TableView fx:id="productTable" prefHeight="129.0" prefWidth="432.0" style="-fx-border-color: gray;">
                           <columns>
                              <TableColumn fx:id="productName" prefWidth="222.0" text="Product" />
                              <TableColumn fx:id="stockStatus" prefWidth="208.0" text="Inventory Status" />
                           </columns>
                           <HBox.margin>
                              <Insets left="10.0" top="40.0" />
                           </HBox.margin>
                        </TableView>
                        <VBox prefHeight="191.0" prefWidth="175.0">
                           <children>
                              <Label alignment="CENTER" prefHeight="47.0" prefWidth="201.0" style="-fx-background-color: gray;" text="Update Stock" textAlignment="CENTER">
                                 <font>
                                    <Font name="System Bold" size="13.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets top="40.0" />
                                 </VBox.margin>
                              </Label>
                              <TextField fx:id="updateStockToy" alignment="CENTER" promptText="Enter Toy" />
                              <TextField fx:id="updateStockBeverage" alignment="CENTER" prefHeight="26.0" prefWidth="201.0" promptText="Enter Beverage" />
                              <TextField fx:id="updateStockBiscuit" alignment="CENTER" prefHeight="0.0" prefWidth="201.0" promptText="Enter Biscuit" />
                           </children>
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </VBox>
                     </children>
                  </HBox>
                  <Button fx:id="backToManagerMenu" alignment="CENTER" contentDisplay="CENTER" layoutX="69.0" layoutY="364.0" lineSpacing="100.0" mnemonicParsing="false" onAction="#handleBackToManagerMenuAction" prefHeight="27.0" prefWidth="53.0" style="-fx-background-color: #6c757d;" text="Back" textAlignment="CENTER" textFill="WHITE" />
                  <Button fx:id="updateStockOK" alignment="CENTER" layoutX="449.0" layoutY="364.0" mnemonicParsing="false" onAction="#updateStock" prefHeight="28.0" prefWidth="124.0" style="-fx-background-color: #89CFF0;" text="Apply Changes">
                     <opaqueInsets>
                        <Insets top="5.0" />
                     </opaqueInsets>
                  </Button>
               </children>
            </AnchorPane>
         </bottom>
      </BorderPane>
   </children>
</VBox>
